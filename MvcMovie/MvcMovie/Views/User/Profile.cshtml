
<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-4">
            <h2>Логин</h2>
            <div class="fakeimg">Фото профиля</div>
            <h3>Уровень подписки</h3>
            <p>Юзер</p>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Купить пробную подписку</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Стать Админом</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Стать Модератором</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Стать техподдержкой</a>
                </li>
            </ul>
            <hr class="d-sm-none">
        </div>
    </div>
    <div class="col-sm-8">
        <h2>Ввести новый пароль</h2>
        <div class="form-group">
            <label for="wst">Сайт:</label>
            <input type="password" class="form-control" id="wst" placeholder="Введите название сайта" name="wst" required>
            <div class="invalid-feedback">Заполните это поле.</div>
        </div>
        <div class="form-group">
            <label for="lgn">Логин:</label>
            <input type="password" class="form-control" id="lgn" placeholder="Введите логин" name="lgn" required>
            <div class="invalid-feedback">Заполните это поле.</div>
        </div>
        <div class="form-group">
            <label for="pwd">Пароль:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Введите пароль" name="pswd" required>
            <div class="invalid-feedback">Заполните это поле.</div>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </div>
</div>
@{
 Layout = "_LayoutUser";
}
